<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FZ155"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@mipmap/item_sum" />

                <TextView
                    android:id="@+id/tv_people_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="可容纳人数60人"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/iv_recent_meeting"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@mipmap/icon_recent_meeting_sum" />

                <TextView
                    android:id="@+id/tv_recent_meeting_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="近五天有10场会议"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/stv_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            app:slantedBackgroundColor="@android:color/holo_green_dark"
            app:slantedLength="40dp"
            app:slantedMode="right"
            app:slantedText="未使用"
            app:slantedTextColor="@android:color/white"
            app:slantedTextSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f8f8f8" />

</LinearLayout>