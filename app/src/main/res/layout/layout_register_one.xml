<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivityOne">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="11"
                    app:hintEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_register_phone_number"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ed_register_phone_left"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/ed_register_phone_left"
                        android:hint="输入手机号"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="true"
                        android:inputType="number"
                        android:maxLength="11" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTintMode="multiply">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_register_password"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ed_password_left"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/ed_password_left"
                        android:hint="输入6~16位密码"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="true"
                        android:inputType="textPassword"
                        android:maxLength="16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTintMode="multiply">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_register_password_again"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ed_password_left"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/ed_password_left"
                        android:hint="再次输入密码"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="true"
                        android:inputType="textPassword"
                        android:maxLength="16" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/bt_register_next"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下一步" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>